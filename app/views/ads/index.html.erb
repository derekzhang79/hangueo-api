<h1>Listing ads</h1>

<%= link_to 'New Ad', new_ad_path, :class=>"btn btn-success"  %>

<br />
<br />

<table class="table table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Active</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Link URL</th>
    <th></th>
    <th></th>
  </tr>

<% @ads.each do |ad| %>
  <tr>
    <td><%= ad.name %></td>
    <td><%= ad.active %></td>
    <td><%= ad.start_date %></td>
    <td><%= ad.end_date %></td>
    <td><%= ad.link_url %></td>
    <td><%= link_to 'Show', ad %></td>
    <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
    <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>